@model CuaHangSach.Models.ApplicationUser

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
<div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">@ViewBag.SiteName</h6>
</div>
<div class="card-body">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <p>@TempData["addRoleForUser"]</p>
        <hr/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Email)
    <div class="form-group">
        <label class="control-label" for="UserName">Tên người dùng</label>
        <div>
            <p class="text-info"><strong>@Html.DisplayFor(model => model.UserName)</strong></p>
        </div>
    </div>

        <div class="form-group">
            <label class="control-label" for="roleId">Lựa chọn phân quyền</label>
            <div>
                @Html.DropDownList("roleId", (SelectList)ViewBag.RoleId, htmlAttributes: new { @class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" value="Thêm phân quyền" class="btn btn-success" />
            </div>
        </div>
    </div>
    }
</div>
<div class="card-footer">
    @Html.ActionLink("Quay về danh sách", "Users", "null", htmlAttributes: new { @class = "btn btn-primary" })
</div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

