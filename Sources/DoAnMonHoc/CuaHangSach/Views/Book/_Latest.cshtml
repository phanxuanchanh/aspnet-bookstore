@using CuaHangSach.Models

<section class="recomended-sec">
    <div class="container">
        <div class="title">
            <h2>Sách mới nhất</h2>
            <hr>
        </div>
        <div class="row">
            @foreach (BookAndImage bookAndImage in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="item">
                        <img src="~/Photos/@bookAndImage.images.FirstOrDefault().source" alt="img">
                        <h3>@bookAndImage.book.name</h3>
                        <h6><span class="price">@bookAndImage.book.price.ToString("#, ##0 VNĐ")</span> / <a href="@Url.Action("Details", "Book", new { id = bookAndImage.book.ID, url = bookAndImage.book.url.Trim() })">Mua ngay</a></h6>
                        <div class="hover">
                            <a href="@Url.Action("Details", "Book", new { id = bookAndImage.book.ID, url = bookAndImage.book.url.Trim()})">
                                <span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
