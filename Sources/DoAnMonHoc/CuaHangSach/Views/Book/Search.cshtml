@using CuaHangSach.Models

@{
    Layout = "~/Views/Shared/_BookLayout.cshtml";
}

@section BreadcrumbItem{
    <span class="breadcrumb-item active">@ViewBag.SiteName</span>
}


@if (Model is string)
{
    <section class="static about-sec">
        <div class="container">
            <h1><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Thông báo</font></font></h1>
            <h3><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@Model</font></font></h3>
            <p>
                <font style="vertical-align: inherit;">
                    <font style="vertical-align: inherit;">Không tìm thấy dữ liệu hoặc do lỗi trong quá trình xử lý dữ liệu</font>
                </font>
            </p>
        </div>
    </section>
}
else
{
    <section class="recomended-sec">
        <div class="container">
            <div class="title">
                <h2>Kết quả tìm kiếm</h2>
                <hr>
            </div>
            <div class="row">
                @foreach (BookAndImage bookAndImage in Model)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="item">
                            <img src="~/Photos/@bookAndImage.images.FirstOrDefault().source" alt="img">
                            <h3>@bookAndImage.book.name</h3>
                            <p>Nhấn vào để xem chi tiết </p>
                            <div class="hover">
                                <a href="@Url.Action("Details", "Book", new { id = bookAndImage.book.ID, url = bookAndImage.book.url.Trim() })">
                                    <span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}


